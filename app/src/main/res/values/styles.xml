<?xml version="1.0" encoding="utf-8"?>
<resources>
    `HADDING`
    <style name="hedding">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/tttravaler_black</item>
    </style>


    `SMALL HEDDING`
    <style name="small_hedding">
        <item name="android:fontFamily">@font/tttravels_extrabold</item>

        <item name="android:textSize">16sp</item>
        `Size need to be half from size of main hadding`
        android:textSize="16sp"
    </style>

    `BUTTON`
    <style name="menu_button">
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/second_color</item>

<!--    paddings-->
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>

<!--        margin-->
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:layout_marginEnd">40dp</item>
    </style>

    <style name="privacy_policy_tv">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/second_color</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="enter_button">
<!--        color-->
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundColor">@color/second_color</item>
<!--        padding-->
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingBottom">20dp</item>

        <item name="paddingStart">50dp</item>
        <item name="paddingEnd">50dp</item>


    </style>

    <style name="main_menu_btn">

        <item name="android:textSize">20sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/white</item>

        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>

        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_marginTop">10dp</item>

        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingBottom">25dp</item>

        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">15dp</item>

        <item name="android:layout_weight">0.5</item>

    </style>

    <style name="main_menu_txt">

        <item name="android:textSize">30sp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/second_color</item>
        <item name="android:textStyle">bold</item>


    </style>

</resources>